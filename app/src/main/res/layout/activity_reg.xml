<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".RegActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"

        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="127dp"
        android:layout_marginLeft="127dp"
        android:layout_marginTop="98dp"
        android:layout_marginEnd="132dp"
        android:layout_marginRight="132dp"
        android:gravity="center"
        android:text="Register"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/nameText"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="63dp"
        android:layout_marginRight="63dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_roundreg"
        android:drawableLeft="@drawable/ic_name"
        android:hint="Name"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:textColorHint="#90ffffff" />

    <EditText
        android:id="@+id/idText"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameText"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="63dp"
        android:layout_marginRight="63dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_roundreg"
        android:drawableLeft="@drawable/ic_action_email"
        android:hint="E-mail"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:textColorHint="#90ffffff" />

    <EditText
        android:id="@+id/phonenumText"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idText"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="63dp"
        android:layout_marginRight="63dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_roundreg"
        android:drawableLeft="@drawable/ic_phone"
        android:hint="Phone number"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:textColorHint="#90ffffff" />

    <EditText
        android:id="@+id/passText"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phonenumText"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="63dp"
        android:layout_marginRight="63dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_roundreg"
        android:drawableLeft="@drawable/ic_action_lock"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:textColorHint="#90ffffff" />

    <EditText
        android:id="@+id/pass2Text"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passText"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginStart="67dp"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="63dp"
        android:layout_marginRight="63dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_roundreg"
        android:drawableLeft="@drawable/ic_action_lock"
        android:hint="Password Check"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:textColorHint="#90ffffff" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/pass2Text"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="63dp"
        android:layout_marginLeft="63dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="63dp"
        android:layout_marginRight="63dp"
        android:gravity="center"
        android:text="Coupang Info"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/coupangidText"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginStart="67dp"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="63dp"
        android:layout_marginRight="63dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_roundreg"
        android:drawableLeft="@drawable/ic_name"
        android:hint="Coupang Id"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:textColorHint="#90ffffff" />

    <EditText
        android:id="@+id/coupangpwText"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coupangidText"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginStart="67dp"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="63dp"
        android:layout_marginRight="63dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_roundreg"
        android:drawableLeft="@drawable/ic_action_lock"
        android:hint="Coupang Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:textColorHint="#90ffffff" />


    <Button
        android:id="@+id/regButton"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/coupangpwText"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="27dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit_round"
        android:text="Sign up"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/backbtn"
        android:layout_width="50dip"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary"
        app:srcCompat="@drawable/ic_back"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"/>

</RelativeLayout>
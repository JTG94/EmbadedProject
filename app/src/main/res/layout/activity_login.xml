<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".LoginActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/idText"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="192dp"
        android:src="@drawable/logo"
        tools:srcCompat="@drawable/courait01" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"

        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/idText"
        android:layout_width="280dp"
        android:layout_height="wrap_content"

        android:layout_above="@+id/passwordText"
        android:layout_alignStart="@+id/passwordText"
        android:layout_alignLeft="@+id/passwordText"
        android:layout_gravity="center"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_round2"

        android:drawableLeft="@drawable/ic_action_email"
        android:hint="E-mail"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />

    <EditText
        android:id="@+id/passwordText"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/loginButton"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="29dp"
        android:background="@drawable/edit_round2"

        android:drawableLeft="@drawable/ic_action_lock"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="#ffff"
        android:textColorHint="#ffffff" />


    <Button
        android:id="@+id/loginButton"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_above="@+id/findpwButton"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="27dp"

        android:background="@drawable/edit_round"
        android:text="Login"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/findpwButton"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_alignEnd="@+id/passwordText"
        android:layout_alignRight="@+id/passwordText"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginEnd="-41dp"
        android:layout_marginRight="-41dp"
        android:layout_marginBottom="78dp"
        android:text="비밀번호 찾기"
        android:textColor="@android:color/background_light"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/registerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginButton"
        android:layout_alignStart="@+id/passwordText"
        android:layout_alignLeft="@+id/passwordText"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-14dp"
        android:layout_marginLeft="-14dp"
        android:layout_marginBottom="90dp"
        android:text="register"
        android:textColor="@android:color/background_light"
        android:textSize="22dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/findidButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginButton"

        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_toStartOf="@+id/findpwButton"
        android:layout_toLeftOf="@+id/findpwButton"
        android:text="아이디 /"
        android:textColor="@android:color/background_light"
        android:textSize="18dp"
        android:textStyle="bold" />


</RelativeLayout>
